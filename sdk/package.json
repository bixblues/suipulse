{
  "name": "@suipulse/sdk",
  "version": "0.1.0",
  "description": "SDK for SuiPulse - A Sui Native Decentralized Data Mesh",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "version": "npm run build",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/suioverflow2025/suipulse.git"
  },
  "keywords": [
    "sui",
    "blockchain",
    "data",
    "mesh",
    "sdk"
  ],
  "author": "SuiPulse Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/suioverflow2025/suipulse/issues"
  },
  "homepage": "https://github.com/suioverflow2025/suipulse#readme",
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@mysten/sui.js": "^0.42.0",
    "@types/ws": "^8.18.1",
    "bech32": "^2.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.19",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
